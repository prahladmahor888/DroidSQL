<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/terminal_background"
    android:fitsSystemWindows="true">
    
    <!-- Material Toolbar (Top) -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#1A1A1A"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:elevation="4dp"
        app:titleTextColor="@color/terminal_info"
        app:title="No Database" />

    <!-- Bottom Toolbar Container (2 Lines) -->
    <LinearLayout
        android:id="@+id/bottomToolbarArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="#222222"
        android:paddingVertical="4dp">

        <!-- Line 1: Control Buttons (Adaptive Width) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingHorizontal="4dp">

            <!-- Previous -->
            <TextView
                android:id="@+id/btnPrevious"
                android:layout_width="0dp"
                android:layout_height="@dimen/toolbar_btn_size"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="monospace"
                android:gravity="center"
                android:text="↑"
                android:textColor="@color/terminal_info"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Next -->
            <TextView
                android:id="@+id/btnNext"
                android:layout_width="0dp"
                android:layout_height="@dimen/toolbar_btn_size"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="monospace"
                android:gravity="center"
                android:text="↓"
                android:textColor="@color/terminal_info"
                android:textSize="20sp"
                android:textStyle="bold" />

            <View android:layout_width="1dp" android:layout_height="24dp" android:background="#444444" android:layout_gravity="center_vertical" />

            <!-- List Tables -->
            <TextView
                android:id="@+id/btnListTables"
                android:layout_width="0dp"
                android:layout_height="@dimen/toolbar_btn_size"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="monospace"
                android:gravity="center"
                android:text="L"
                android:tooltipText="List Tables"
                android:textColor="@color/terminal_info"
                android:textSize="@dimen/toolbar_text_size" />

            <!-- Templates -->
            <TextView
                android:id="@+id/btnTemplates"
                android:layout_width="0dp"
                android:layout_height="@dimen/toolbar_btn_size"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="monospace"
                android:gravity="center"
                android:text="T"
                android:tooltipText="Templates"
                android:textColor="@color/terminal_info"
                android:textSize="@dimen/toolbar_text_size" />

            <!-- Export -->
            <TextView
                android:id="@+id/btnExport"
                android:layout_width="0dp"
                android:layout_height="@dimen/toolbar_btn_size"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="monospace"
                android:gravity="center"
                android:text="E"
                android:tooltipText="Export DB"
                android:textColor="@color/terminal_info"
                android:textSize="@dimen/toolbar_text_size" />

            <!-- Clear -->
            <TextView
                android:id="@+id/btnClear"
                android:layout_width="0dp"
                android:layout_height="@dimen/toolbar_btn_size"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="monospace"
                android:gravity="center"
                android:text="C"
                android:tooltipText="Clear Terminal"
                android:textColor="@color/terminal_info"
                android:textSize="@dimen/toolbar_text_size" />

            <View android:layout_width="1dp" android:layout_height="24dp" android:background="#444444" android:layout_gravity="center_vertical" />

            <!-- Settings -->
            <TextView
                android:id="@+id/btnSettings"
                android:layout_width="0dp"
                android:layout_height="@dimen/toolbar_btn_size"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="monospace"
                android:gravity="center"
                android:text="S"
                android:tooltipText="Settings"
                android:textColor="@color/terminal_info"
                android:textSize="@dimen/toolbar_text_size"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#333333"
            android:layout_marginVertical="2dp"/>

        <!-- Line 2: Symbol ScrollView -->
        <HorizontalScrollView
            android:id="@+id/symbolToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/symbolContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="4dp">

                <!-- Symbol Buttons -->
                <Button style="@style/SymbolButton" android:text=";" android:tag=";" />
                <Button style="@style/SymbolButton" android:text="," android:tag="," />
                <Button style="@style/SymbolButton" android:text="_" android:tag="_" />
                <Button style="@style/SymbolButton" android:text="&lt;" android:tag="&lt;" />
                <Button style="@style/SymbolButton" android:text="=" android:tag="=" />
                <Button style="@style/SymbolButton" android:text="&quot;" android:tag="&quot;" />
                <Button style="@style/SymbolButton" android:text="'" android:tag="'" />
                <Button style="@style/SymbolButton" android:text="&gt;" android:tag="&gt;" />
                <Button style="@style/SymbolButton" android:text="*" android:tag="*" />
                <Button style="@style/SymbolButton" android:text="(" android:tag="(" />
                <Button style="@style/SymbolButton" android:text=")" android:tag=")" />
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <!-- Middle Content Area (Terminal + FABs) -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topToolbar"
        android:layout_above="@id/bottomToolbarArea">

        <!-- Terminal Output Area -->
        <ScrollView
            android:id="@+id/svTerminalOutput"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:scrollbars="vertical"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Terminal Output (Commands + Results) -->
                <TextView
                    android:id="@+id/tvTerminalOutput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/terminal_text"
                    android:fontFamily="monospace"
                    android:textSize="13sp"
                    android:lineSpacingExtra="2dp"
                    android:text="" />


                <!-- Active Command Input Line -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    
                    <!-- mysql> Prompt -->
                    <TextView
                        android:id="@+id/tvPrompt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="mysql>"
                        android:textColor="@color/terminal_success"
                        android:fontFamily="monospace"
                        android:textSize="13sp"
                        android:paddingEnd="4dp"
                        android:paddingStart="0dp" />

                    <!-- Command Input -->
                    <EditText
                        android:id="@+id/etSqlInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:fontFamily="monospace"
                        android:gravity="top"
                        android:hint=""
                        android:inputType="textNoSuggestions|textMultiLine"
                        android:maxLines="10"
                        android:padding="0dp"
                        android:textColor="@color/terminal_text"
                        android:textSize="13sp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</RelativeLayout>